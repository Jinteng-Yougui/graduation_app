<h1>連絡先一覧</h1>
<p class="text-center"><%= flash[:notice] %></p>
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="http://coco-factory.jp/ugokuweb/wp-content/themes/ugokuweb/data/move02/5-8/css/reset.css">
  <link rel="stylesheet" type="text/css" href="http://coco-factory.jp/ugokuweb/wp-content/themes/ugokuweb/data/move02/5-8/css/5-8.css">
</head>

<body>
  <div id="particles-js"></div>
  <div id="wrapper">
    <p><br><a href="https://vincentgarreau.com/particles.js/" target="_blank"></a></p>
  </div>
  <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
  <script src="http://coco-factory.jp/ugokuweb/wp-content/themes/ugokuweb/data/move02/5-8/js/5-8.js"></script>

  <table class="table">
    <thead>
      <tr>
        <th>名前</th>
        <th>日付</th>
        <th>祝い言カテゴリー</th>
      </tr>
    </thead>

    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.contact.name %></td>
          <td><%= booking.date_on %></td>
          <td><%= booking.category.name %></td>
          <td><button type="button" class="btn btn-outline-success"><%= link_to "連絡先を編集", edit_contact_path(booking.contact.id) %></button></td>
          <td><button type="button" class="btn btn-outline-danger"><%= link_to "連絡先を削除", contact_path(booking.contact.id), method: :delete, data: {confirm: '本当に削除しますか？'} %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to '連絡先を追加', new_contact_path %>

<%= paginate @bookings %>
</body>
