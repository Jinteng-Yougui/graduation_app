<h1><%= @user.name %>のページ</h1>
<p class="text-center"><%= flash[:notice] %></p>
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="http://coco-factory.jp/ugokuweb/wp-content/themes/ugokuweb/data/move02/5-8/css/reset.css">
  <link rel="stylesheet" type="text/css" href="http://coco-factory.jp/ugokuweb/wp-content/themes/ugokuweb/data/move02/5-8/css/5-8.css">
</head>

<body>
  <h2>連絡先一覧</h2>
  <div id="particles-js"></div>
  <div id="wrapper">
    <p><br><a href="https://vincentgarreau.com/particles.js/" target="_blank"></a></p>
  </div>
  <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
  <script src="http://coco-factory.jp/ugokuweb/wp-content/themes/ugokuweb/data/move02/5-8/js/5-8.js"></script>

  <table class="table">
    <thead>
      <tr>
        <th>名前</th>
        <th>日付</th>
        <th>祝い言カテゴリー</th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.bookings.date_on %></td>
          <td><%= contact.categories.name %></td>
          <td><button type="button" class="btn btn-outline-info"><%= link_to '詳細', booking_path(contact.id) %></button></td>
        <td><button type="button" class="btn btn-outline-success"><%= link_to "編集", edit_contact_path(contact.id) %></button></td>
        <td><button type="button" class="btn btn-outline-danger"><%= link_to "削除", contact_path(contact.id), method: :delete, data: {confirm: '本当に削除しますか？'} %></button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>

<h2>検索</h2>
<%= search_form_for @q, url: search_contacts_path do |f| %>
  <%= f.label :name_cont, 'ユーザー名' %>
  <%= f.search_field :name_cont %>
  <br>
  <%= f.submit '検索' %>
<% end %>

<br>

<%= link_to '連絡先を追加', new_contact_path %>

<%= paginate @contacts %>
